{
	"compilerOptions": {
		"target": "es6",
		"module": "es6",
		"outDir": "module/",
		"moduleResolution": "node",
		"newLine": "lf",
		"rootDir": "src/",
		"incremental": true,
		"declaration": true,
		"allowJs": false,
		"checkJs": false,
		"strict": true,
		"removeComments": true,
		"allowUnreachableCode": true,
		"noUnusedParameters": false,
		"noUnusedLocals": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"stripInternal": true,
		"esModuleInterop": true,
		"noImplicitReturns": true
	}
}
